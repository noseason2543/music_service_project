<%- include('header.ejs') -%>
<div class="container container-fluid" style=" padding:8%;">
  <div class="p-5 " style="border-radius:12px; background-color:rgba(255, 152, 250, 0.322); ">
    <div class="row">
      <img src="../images/bpregis.gif" class="col-lg-6 " style="max-height: 600px;">
      <div class="text-center col-lg-6">
        <form class="login1" method="POST" action="/auth/register">
          <p class="title text-center pt-2 pb-0" style="font-size: 50px; color:white">Register</p>
              <div class="form-group">
                <label for="name" class="sr-only">Name (Optional)</label> 
                <input type="text" name="name" id="name" class="" placeholder="Name">
                <i class="fa fa-user-circle"></i>
              </div>
              <div class="form-group">
                <label for="username" class="sr-only">Username</label>
                <input type="text" name="username" id="username" class="" placeholder="Username" required>
                <i class="fa fa-user"></i>
              </div>
              <div class="form-group">
                <label for="password" class="sr-only">Password</label> 
                <input type="password" name="password" id="password" class="" placeholder="Password" required>
                <i class="fa fa-key"></i>
              </div> 
              <div class="form-group">
                <label for="email" class="sr-only">Email</label> 
                <input type="email" name="email" id="email" class="" placeholder="Email" required>
                <i class="fa fa-envelope"></i>
              </div>           
              <div class="mt-4 pulse3">
                <button class="btn bdregis  btn-block" type="submit" style="font-size: 18px;">Register</button> 
              </div>
              <% if(regisResult !== ''){ %> 
                <p class="alert alert-danger"><%= regisResult %></p>
              <% } %>  
              <a href="/login" class="mt-3 btn btn-link" style="color: rgb(0, 0, 0); font-size:16px">Have an account?</a> 
        </form>
      </div>
    </div>
  </div>
</div>

    
<%- include('footer.ejs') -%>     