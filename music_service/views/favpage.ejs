            <h1 class="button text-left ">Favorites Song :</h1><br>
            <div class="row">   
              <div class="dropdown col-lg-6  align-middle">
                <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  sorting
                </button>
                <div class="dropdown-menu mt-1" aria-labelledby="dropdownMenuButton">
                  <a class="dropdown-item" href="/favorite/sortByArtist">sort by artist</a>
                  <a class="dropdown-item" href="/favorite/sortBySong">sort by song</a>
                </div>
              </div>
              <form class="mt-1 d-flex col-lg-6 flex-row-reverse form-group " action="/favorite/search" method="POST">
                <button class="slide btn btn-outline-success" type="submit">Search</button>
                <input id="searchbar " name="search" size="80" class="form-control me-2 buscar-txt rounded search-bar" type="search" placeholder="Artist or Song" aria-label="Search">
              </form>
            </div>
            <table class="table table-borderless table-hover table-responsive-lg">
              <thead>
                <tr>
                  <th scope="col">Number</th>
                  <th scope="col">Artist</th>
                  <th scope="col">Title</th>
                  <th scope="col">Download</th>
                  <th scope="col">lyrics</th>
                  <th scope="col">Favorite</th>
                  
                </tr>
              </thead>
              <tbody>
                <%for(let i = 0;i < favorite.length;i++){ %>
                  <tr>
                    <th scope="row" class="align-middle"><%= i+1 %></th>
                    <td ><img src="<%= favorite[i][2] %>" class="img-fluid" width="100px">&nbsp;&nbsp;<%= favorite[i][0] %></td>
                    <td class="align-middle"><%= favorite[i][1] %></td>
                    <%if(preOrNot){ %>
                      <td class="align-middle"><a href="" data-target="#com<%= i %>" data-toggle="modal"><img src="/images/downloadsong.png" class="img-fluid" width="30px"></a></td>
                    <%}else{ %>
                      <td class="align-middle"><a href="" data-target="#gopre<%= i %>" data-toggle="modal"><img src="/images/downloadsong.png" class="img-fluid" width="30px"></a></td>
                    <%} %>
                    <td class="align-middle"><a href="/lyrics/detail/<%= favorite[i][0] %>/<%= favorite[i][1] %>"><img src="/images/song-lyrics.png" class="img-fluid" width="30px"></a></td>
                    <td class="align-middle"><a href="/favorite/unFav/<%= name %>/<%= favorite[i][0] %>/<%= favorite[i][1] %>"><img src="/images/star.png" class="img-fluid" width="30px"></a></td>
                    
                  </tr>
                  <div class="modal fade" id="com<%= i %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="Title">Download</h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                          Are you sure to download <h5><%= favorite[i][1] %></h5>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <a href="<%= favorite[i][3] %>" download=""><button type="submit" onclick="$('#com<%= i %>').modal('hide')" class="btn btn-primary" >Ok</button></a>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="modal fade" id="gopre<%= i %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="Title">PremiumðŸ‘‘</h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                          This feature need premium account.
                        </div>
                        <div class="modal-footer">
                          <form method="GET" action="/premium">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Go premium</button>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                <%} %>
              </tbody>
            </table>
        </div>
    </div>
    </div>
